/* pages/pay/pay.wxss */

page {
  padding-bottom: 90rpx;
}

.user {
  display: flex;

  padding: 20rpx;
}
.user .user_info {
  flex: 5;
}
.user .user_phone {
  flex: 3;

  text-align: right;
}

.cart_title {
  font-size: 36rpx;
  padding: 20rpx;
  color: var(--theme-color);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}

.cart_item {
  display: flex;

  border-bottom: 1rpx solid #ccc;
  padding: 10rpx;
}

.cart_item .cart_img {
  flex: 2;

  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_item .cart_img image {
  width: 80%;
}

.cart_item .cart_info {
  flex: 4;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_item .cart_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_item .cart_info .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_item .cart_info .goods_price_wrap .goods_price {
  color: var(--theme-color);
  font-size: 35rpx;
}
.cart_item .cart_info .goods_price_wrap .goods_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

.cart_wrap {
  position: fixed;
  left: 0;
  bottom: 0;

  width: 100%;
  height: 90rpx;
  background-color: white;

  display: flex;

  border-top: 1rpx solid #ccc;
}
.cart_wrap .total_price_wrap {
  flex: 5;

  text-align: right;
  font-size: 32rpx;

  padding-right: 10rpx;
}
.cart_wrap .total_price_wrap .total_price text {
  color: var(--theme-color);
  font-weight: bold;
  font-size: 32rpx;
}
.cart_wrap .total_price_wrap .text {
  color: #999;
  font-size: 28rpx;
}
.cart_wrap .order_pay_wrap {
  flex: 3;

  background-color: var(--theme-color);

  color: #fff;
  font-size: 32rpx;
  font-weight: bold;

  display: flex;
  justify-content: center;
  align-items: center;
}

.empty_cart_img {
  width: 100vw;
  height: 100vw;

  display: flex;
  justify-content: center;
  align-items: center;
}
.empty_cart_img image {
  width: 75%;
}

